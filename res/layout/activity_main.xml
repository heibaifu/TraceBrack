<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.example.mycleanapplication.MainActivity" >

    
     
     
    <FrameLayout   
      android:id="@+id/content_fragment"  
      android:layout_width="match_parent"  
      android:layout_height="match_parent"
      android:layout_above="@+id/table_line"
      android:background="@color/gray"
       />
    <LinearLayout 
        android:id="@+id/table_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:weightSum="2"
        >
        <TextView 
          android:id="@+id/erweima_scan"
          android:layout_width="0dp"
          android:layout_height="wrap_content"  
          android:paddingTop="15dp"
          android:paddingBottom="15dp"
          android:layout_weight="1" 
          android:text="@string/main_erweima"
          android:gravity="center"
          android:textSize="25sp"
          android:textColor="@color/black"
            />
        
        <TextView 
          android:id="@+id/nfc_scan"
          android:layout_width="0dp"
          android:layout_height="wrap_content" 
          android:paddingTop="15dp"
          android:paddingBottom="15dp" 
          android:layout_weight="1" 
          android:text="@string/main_nfc"
          android:gravity="center"
          android:textSize="25sp"
          android:textColor="@color/black"
            />
        
    </LinearLayout>
    
     
   
     
     
     
     
     
</RelativeLayout>
